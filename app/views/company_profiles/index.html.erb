<h1>Company Profiles</h1>

<table class="table table-bordered table-striped table-condensed table-responsive">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>City</th>
      <th>State</th>
      <th>Contact</th>
      <th>Telephone</th>
      <th>Fax</th>
      <th>Website</th>
      <th>Broker mc</th>
      <th>Carrier mc</th>
      <th>Us dot</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @company_profiles.each do |company| %>
      <tr>
        <td><%= company.id %></td>
        <td><%= company.company_name %></td>
        <td><%= company.city %></td>
        <td><%= company.state %></td>
        <td><%= company.contact  %></td>
        <td><%= company.telephone %></td>
        <td><%= company.fax %></td>
        <td><%= company.website %></td>
        <td><%= company.broker_mc_number %></td>
        <td><%= company.carrier_mc_number %></td>
        <td><%= company.us_dot_number %></td>
        <td><div class="btn-group pull-right activity-actions">
  <button type="button" class="btn btn-xs btn-default dropdown-toggle" data-toggle="dropdown">
  <i class="fa fa-th"></i>
  <span class="sr-only">Toggle Dropdown</span>
  </button>
  <ul class="dropdown-menu dropdown-menu-right" role="menu">
    <li><%= link_to 'Show', company %></li>
    <li><%= link_to 'Edit', edit_company_profile_path(company) %></li>
    <li class="divider"></li>
    <li><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></li>
  </ul>
</div>
</td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
  <div class="row">
  <div class="col-sm-3">
    <h4>Import Brokers</h4>
    <%= form_tag import_company_profiles_path, multipart: true do %>
    <%= file_field_tag :file, class: "btn btn-success btn-xs" %><br>
    <%= submit_tag "Upload Brokers", class: "btn btn-info btn-xs" %>
    <% end %>
  </div>
  <div class="col-sm-4">
<h4>Export Companies/Brokers</h4>
  <%= link_to "Download Companies", company_profiles_path(format: :csv), 
  class: "btn btn-primary btn-xs round" %> 

<%= link_to 'New Company/Broker', new_company_profile_path %>
  </div>
</div> 


