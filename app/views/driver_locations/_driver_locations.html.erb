<li><%= link_to "Driver Locations", driver_user_driver_locations_path(@driver) %></li> 
<h2><%= @driver.first_name %>'s Locations</h2>
<%= paginate @location_paginate %> 
<table class="table table-bordered table-striped table-condensed table-responsive">
  <thead>
    <tr>
      <th>Driver email</th>
      <th>Parse ID</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Speed</th>
      <th>Bearing</th>
      <th>Parse created at</th>
      <th>Parse updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @location_paginate.each do |driver_location| %> 
      <tr>
        <td><%= driver_location.driver_email %></td>
        <td><%= driver_location.the_parse_id %></td>
        <td><%= driver_location.latitude %></td>
        <td><%= driver_location.longitude %></td> 
        <td><%= driver_location.speed %></td>
        <td><%= driver_location.bearing %></td>
        <td><%= local_time (driver_location.parse_created_at) %></td>
        <td><%= local_time (driver_location.parse_updated_at) %></td>
        <td><%= link_to 'Show', driver_user_driver_location_path(@driver, driver_location) %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>