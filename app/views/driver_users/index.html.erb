<h1>All Drivers</h1>
<%= paginate @drivers %>
<%= search_form_for @search do |f| %>  
<%= link_to "Reload", 
  driver_users_path, class: 'btn btn-primary btn-xs round'%>
<br />
<div>
  <%= f.label :driver_search_params_cont, "Search" %>  
  <%= f.text_field :driver_search_params_cont %>     
</div>
<div>
  <br />            
  <%= f.submit "Search", class: 'btn btn-success btn-xs round' %> 
</div>
<% end %>
<table class="table table-bordered table-striped table-condensed table-responsive">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= sort_link @search, :first_name, "Name" %></th>
      <th>Email</th>
      <th>Cellphone</th>
      <th><%= sort_link @search, :company_driver, "Driver Type" %></th>
      <th><%= sort_link @search, :employment_status, "Employment Status" %></th>
    </tr>
  </thead>
  <tbody>
    <% @drivers.each do |driver| %>
    <tr>
      <td><%= driver.id %></td>
      <td><%= link_to driver_user_path(driver) do %>
        <%= driver.first_name %> <%= driver.last_name %>
        <% end %>
      </td>
      <td><%= driver.email %></td>
      <td><%= driver.cellphone %></td>
      <td>
        <% if driver.company_driver %>
        Company Driver
        <% end %>
        <% if driver.owner_operator %>
        Owner Operator
        <% end %>
      </td>
      <td><%= driver.employment_status %></td>
      <td>
        <div class="btn-group pull-right activity-actions">
          <button type="button" class="btn btn-xs btn-default dropdown-toggle" data-toggle="dropdown">
          <i class="fa fa-th"></i>
          <span class="sr-only">Toggle Dropdown</span>
          </button>
          <ul class="dropdown-menu dropdown-menu-right" role="menu">
            <li><%= link_to 'Show', driver %></li>
            <li><%= link_to 'Edit', edit_driver_user_path(driver) %></li>
            <li class="divider"></li>
          </ul>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="row">
  <div class="col-sm-4">
    <h4>Import Drivers</h4>
    <%= form_tag import_driver_users_path, multipart: true do %>
    <%= file_field_tag :file, class: "btn btn-success btn-xs" %><br>
    <%= submit_tag "Upload Drivers", class: "btn btn-info btn-xs" %>
    <% end %>
  </div>
  <div class="col-sm-4">
    <h4>Export Drivers</h4>
    <%= link_to "Download Drivers", driver_users_path(format: :csv), class: "btn btn-primary btn-xs" %> 
  </div>
  <div class="col-sm-4">
  </div>
</div>