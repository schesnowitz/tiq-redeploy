
<h1>Trailer Miles</h1>

<table class="table table-bordered table-striped table-condensed table-responsive"> 
  <thead>
    <tr>
      <th>Mileage</th>
      <th>Type</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trailer_miles.each do |mile| %>
      <tr>
        <td><%= mile.mileage %></td>
        <td><%= mile.type %></td> 
        <td><%= mile.notes %></td>
        <td><%= link_to 'Show', trailer_trailer_mile_path(@trailer, mile), class:"btn btn-hrcinfo btn-xs round" %></td>
        <td><%= link_to 'Edit', edit_trailer_trailer_mile_path(@trailer, mile), class:"btn btn-hrcsuccess btn-xs round" %></td>
        <td><%= link_to 'Destroy', trailer_trailer_mile_path(@trailer, mile), 
        method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-xs round" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
