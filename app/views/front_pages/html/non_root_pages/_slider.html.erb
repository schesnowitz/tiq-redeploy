<!-- Slider --> 
<section class="no-padding" id="home">
  <div class="slider owl-carousel owl-theme">
    <!-- Slide -->
    <div class="item mask slider-image"  data-stellar-background-ratio="0.4">
      <div class="container height-100p">
        <div class="row height-100p">
          <div class="col-sm-6 col-md-6 height-100p bounceInLeft wow" data-wow-duration="1.3s" data-wow-delay="0.3s" data-stellar-ratio="0.7">
            <div class="vertical-middle">
              <h1 class="text-white"><%= @fpt4.string_input %>  
                <span class="text-theme"><%= @fpt5.string_input %> </span>
              </h1>
              <div class="text-white h4">
                <%= @fpt80.string_input %>  
              </div>
              <span class="text-theme"><%= @fpt1.text_input %></span>
            </div>
          </div>
          <div class="col-sm-6 col-md-4 col-md-offset-2 height-100p bounceInRight wow" data-wow-duration="1.3s" data-stellar-ratio="0.8">
            <div class="vertical-middle">
              <% image_tag("front_pages/devices.png", class:"img-responsive") %> 
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- /Slide -->
