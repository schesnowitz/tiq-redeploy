<!-- Section: Best Features -->
<section id="best-features" class="section">
  <div class="container">
    <!-- Section Header -->
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <header class="text-center">
          <h2 class="section-title">
            <%= @fpt25.string_input %>
            <span class="text-theme">
            <%= @fpt26.string_input %>
            </span>
          </h2>
          <p class="section-subtitle">
            <%= @fpt27.string_input %>
          </p>
        </header>
      </div>
    </div>
    <!-- /Section Header -->
    <!-- Section Content -->
    <div class="row section-content">
      <div class="col-md-6">
        <h3>
          <%= @fpt28.string_input %>
        </h3>
        <ul class="list">
          <li>
            <h4 class="title bounceInUp wow" data-wow-duration="1.3s" data-wow-delay="0.2s">
              <%= @fpt29.string_input %>
            </h4>
            <p class="description fadeIn wow" data-wow-duration="1.3s" data-wow-delay="0.2s">
              <%= @fpt30.string_input %>
            </p>
          </li>
          <li>
            <h4 class="title bounceInUp wow" data-wow-duration="1.3s" data-wow-delay="0.4s">
              <%= @fpt31.string_input %>
            </h4>
            <p class="description fadeIn wow" data-wow-duration="1.3s" data-wow-delay="0.4s">
              <%= @fpt32.string_input %>
            </p>
          </li>
          <li>
            <h4 class="title bounceInUp wow" data-wow-duration="1.3s" data-wow-delay="0.6s">
              <%= @fpt33.string_input %>
            </h4>
            <p class="description fadeIn wow" data-wow-duration="1.3s" data-wow-delay="0.6s">
              <%= @fpt34.string_input %>
            </p>
          </li>
        </ul>
      </div>
      <!-- Section Image -->
      <div class="col-md-6 hidden-sm hidden-xs bounceInRight wow" data-wow-duration="1.3s"> 
        <%=image_tag("front_pages/devices.png", class:"img-responsive") %> 
      </div>
      <!-- /Section Image -->
    </div>
    <!-- /Section Content -->
  </div>
</section>
<!-- /Section: Best Features -->