<p id="notice"><%= notice %></p>

<h1>App Variables</h1>

<table class="table table-bordered table-striped table-condensed table-responsive">
  <thead>
    <tr>
      <th>App name</th>
      <th>App logo</th>
      <th>App logo name</th>
      <th>App tab name</th>
      <th>App slogan</th>
      <th>App favi</th>
      <th>App terms</th>
      <th>App conditions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @app_variables.each do |app_variable| %>
      <tr>
        <td><%= app_variable.app_name %></td>
        <td><%= app_variable.app_logo %></td>
        <td><%= app_variable.app_logo_text %></td>
        <td><%= app_variable.app_tab_text %></td> 
        <td><%= app_variable.app_slogan %></td>
        <td><%= app_variable.app_favi %></td>
        <td><%= app_variable.app_terms.truncate(20) %></td>
        <td><%= app_variable.app_conditions.truncate(20) %></td>

        <td><%= link_to 'Show', app_variable %></td>
        <td><%= link_to 'Edit', edit_app_variable_path(app_variable) %></td>
        <td><%= link_to 'Destroy', app_variable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New App Variable', new_app_variable_path %>
