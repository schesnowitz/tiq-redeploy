<% if @load.is_hazmat? %>
<div class='text-center'>  
  <%= image_tag "hazardous.jpg" %> 
</div>
<h3 class='text-center text-muted'>This Load Contains Hazardous Materials!</h3>
<br>
<% end %>
<% if @load.is_temp_control? %> 
<div class="panel panel-default"> 
  <div class="panel-heading">
    <h3 class="panel-title">This Load Requires Temperature Control</h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-sm-6">
        <div>
          <%= image_tag 'fahrenheit.jpg' %>
          <strong><%= @load.fahrenheit %></strong>
        </div>
      </div>
      <div class="col-sm-6">
        <div>
          <%= image_tag 'celsius.jpg' %> 
          <strong><%= @load.celsius %></strong> 
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>