	<thead>
		<tr>
		  <th>Booked/Updated</th>
			<th>Truck</th>
			<th>Trailer</th>  
		</tr>
	</thead>
	<tbody> 
		<tr>
		  
		  <td>
		      Booked by: <%= link_to @load.company_user.full_name, 
          user_path(@load.company_user_id) %>
          <br>
          On: <%= local_time(@load.created_at, format:  '%B %e, %Y') %> 
  <br>
  <% if @load.updated_by.present? %>
    Updated by: <%= @load.updated_by %>
    <br>
  On: <%= local_time(@load.updated_at, format:  '%B %e, %Y') %>
  <% else %>
  This load has not been updated.
  <% end %>  
