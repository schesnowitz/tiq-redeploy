<h2>Log in<small> Welcome Back!</small></h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row">
<div class="col-md-6 col-xs-offset-3 shadow well">
<div class="panel panel-default well">
<div class="panel-body">
  <%= render "devise/shared/links" %>
  <hr>
  <div class="form-inputs">
    <div class="row">
      <div class="col-md-12">
        <div class="form-group input-group">
          <span class="input-group-addon"><i class="fa fa-user"></i>
          </span>
          <%= f.input :email, required: false,
            label: false, autofocus: true, placeholder: "Enter Your Email" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="form-group input-group">
          <span class="input-group-addon"><i class="fa fa-unlock"></i>
          </span>
          <%= f.input :password, required: false,
            label: false, placeholder: "Enter Your Password" %>
        </div>
      </div>
    </div>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    <%= f.button :submit, "Log in", class: 'btn btn-success btn-sm round' %>
    <% end %>
  </div>
</div>
</div>
</div>
</div>
