<h1>All shipper Users</h1>
<%= paginate @shipper_users %> 
<%= search_form_for @search do |f| %>  
<%= link_to "Reload", 
shipper_users_path, class: 'btn btn-shipperprimary btn-xs round'%>
<br />
<div>
<%= f.label :shipper_search_params_cont, "Search" %>  
<%= f.text_field :shipper_search_params_cont %>     

</div>
<div>
<br />            
<%= f.submit "Search", class: 'btn btn-shippersuccess btn-xs round' %> 
</div>
<% end %>
<table class="table table-bordered table-striped table-condensed table-responsive">
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Email</th>
			<th>Type</th>
			<th>Employment Status</th>

		</tr>
	</thead>
	<tbody>
	  <% @shipper_users.each do |shipper| %>
		<tr>
			<td><%= shipper.id %></td>
			
			<td><%= link_to shipper_user_path(shipper) do %>
			  <%= shipper.full_name %>
			  <% end %>
			</td>
			
			<td><%= shipper.email %></td>
			<td><%= shipper.type_of_user %></td>
			<td><%= shipper.employment_status %></td> 
<td>
  <div class="btn-group pull-right activity-actions">
    <button type="button" class="btn btn-xs btn-default dropdown-toggle" data-toggle="dropdown">
    <i class="fa fa-th"></i>
    <span class="sr-only">Toggle Dropdown</span>
    </button>
    <ul class="dropdown-menu dropdown-menu-right" role="menu">
      <li><%= link_to 'Show', shipper %></li>
      <li><%= link_to 'Edit', edit_shipper_user_path(shipper) %></li>
      <li class="divider"></li>

    </ul>
  </div>
</td>
		</tr>
		<% end %>
	</tbody>
</table>
<div class="row">
  <div class="col-sm-4">
    <h4>Import shipper Users</h4>
    <%= form_tag import_shipper_users_path, multipart: true do %>
    <%= file_field_tag :file, class: "btn btn-success btn-xs" %><br>
    <%= submit_tag "Upload shipper Users", class: "btn btn-info btn-xs" %>
    <% end %>

  </div>
  <div class="col-sm-4">
    <h4>Export shipper Users</h4>
    <%= link_to "Download shipper Users", shipper_users_path(format: :csv), class: "btn btn-primary btn-xs" %> 
  </div>
  <div class="col-sm-4">

  </div>
</div> 